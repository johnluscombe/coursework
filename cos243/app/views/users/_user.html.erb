<div class="user<%= user.id %>">
  <tr>
    <td><li><%= link_to user.name, user %></li></td>
    <td><li><%= user.email %></li></td>

    <% if current_user?(user) %>
        <td class="text-right"><%= link_to 'edit', edit_user_path(user), class: 'btn btn-default btn-xs' %></td>
    <% else %>
        <td></td>
    <% end %>

    <td class="text-right"><%= link_to 'delete', user, method: :delete, class: 'btn btn-danger btn-xs' %></td>
  </tr>
</div>