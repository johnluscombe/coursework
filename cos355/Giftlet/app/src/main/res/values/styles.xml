<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativeLayoutStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="StandardPadding">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ListViewStyle_Base">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ListViewStyle_WithMargins" parent="ListViewStyle_Base">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ListViewStyle_NoLinks" parent="ListViewStyle_Base">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle_Base" parent="StandardPadding">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="EditTextStyle_TextPersonName" parent="EditTextStyle_Base">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EditTextStyle_NumberDecimal" parent="EditTextStyle_Base">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="AddNewGiftButtonStyle">
        <item name="android:background">#5CB85C</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
