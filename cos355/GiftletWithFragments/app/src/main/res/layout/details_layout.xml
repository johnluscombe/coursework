<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.johnluscombe.giftletwithfragments.DetailsFragment"
    style="@style/StandardMargin">

    <TextView
        android:id="@+id/gift_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Stand"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gift_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="$9.99"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gift_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="This book stand will be very useful for classes the require me to use a textbook."
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="View Webpage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20px"
            android:text="Delete" />

    </LinearLayout>

</LinearLayout>
